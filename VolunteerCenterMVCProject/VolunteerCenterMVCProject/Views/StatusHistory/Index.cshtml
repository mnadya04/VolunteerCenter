@model VolunteerCenterMVCProject.ViewModels.StatusHistory.IndexVM


<div class="grid">


	<div class="row">
	</div>
	<div class="container mt-4">
		<div class="row text-center border-bottom pb-2 mb-2">
			<div class="col-3 font-weight-bold">User</div>
			<div class="col-3 font-weight-bold">Event</div>
			<div class="col-3 font-weight-bold">New Status</div>
			<div class="col-3 font-weight-bold">Change date</div>
		</div>

		@foreach (var item in Model.Changes)
		{
			<div class="row text-center align-items-center py-2 border-bottom">
				<div class="col-3">@item.Username</div>
				<div class="col-3">@item.Event</div>
				<div class="col-3">@item.NewStatus</div>
				<div class="col-3">@item.ChangeDate</div>
			</div>
		}

	<!-- Pager -->
	<div class="row mt-4">
		<div class="col text-center">
				@{
					Html.RenderPartial("/Views/Shared/PagerPartial.cshtml", Model.Pager);
				}
		</div>
	</div>
</div>


